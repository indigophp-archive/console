{
    "name": "indigophp/console",
    "description": "Console built with separated CLI components",
    "license": "MIT",
    "keywords": ["console", "climate"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "league/climate": "~2.5.0",
        "league/event": "~1.0.0",
        "filp/whoops": "~1.1.0",
        "psr/log": "~1.0.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "henrikbjorn/phpspec-code-coverage" : "1.0.*@dev"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Console\\": "src/"
        },
        "psr-0": {
            "Whoops\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Indigo\\Console\\Stub\\": "stub/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
